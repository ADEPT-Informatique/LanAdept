@model  LanAdeptAdmin.Views.Tournaments.ModelController.TournamentModel

@{
	ViewBag.Title = "Supprimer un tournoi";
	ViewBag.Sidebar = "_Sidebar_Tournament";
}

<h2>@ViewBag.Title</h2>


<div class="row">
	<h4>Voulez-vous vraiment supprimer le tournoi de "@Html.DisplayFor(model => model.Game.Name)" ?</h4>


	<div class="col-lg-7 text-right">
		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			@Html.ActionLink("Non", "Index", null, new { @class = "btn btn-default" })
			<input type="submit" value="Supprimer" class="btn btn-danger" />
		}
	</div>
</div>