@model LanAdeptAdmin.Views.General.ModelController.DescriptionModel

@{
    ViewBag.Title = "Description";
    ViewBag.Sidebar = "_Sidebar_General";
}

<h2>Description</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", style = "height:400px;" } })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        <br />
        <input type="submit" value="Enregistrer" class="btn btn-primary pull-right" />
    </div>
}
<h2>Prévisualisation:</h2>
<pre id="prev">
	@Html.Markdown(Model.Description)
</pre>

@section Scripts {
    @Scripts.Render("~/bundles/markdown")

    <script>
		$(function () {
			var markdown = new MarkdownDeep.Markdown();
			markdown.ExtraMode = true;
			markdown.SafeMode = false;

			$("#Description").keyup(function () {
				console.log("Change!");
				$("#prev").html(markdown.Transform($("#Description").val()));
			});
		});
    </script>
}