@model LanAdeptAdmin.Views.General.ModelController.SettingsModel

@{
    ViewBag.Title = "Paramètres généraux";
    ViewBag.Sidebar = "_Sidebar_General";
}

<div class="page-header clearfix">
    <h2>@ViewBag.Title</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SettingId)

        @if (!string.IsNullOrWhiteSpace(TempData["Success"] as string))
        {
            <div class="form-group">
                <div class="col-md-8 col-lg-5 col-md-push-4 col-lg-push-3">
                    <div class="alert alert-success" role="alert" style="margin-bottom:0;">
                        @Html.Raw(TempData["Success"])
                    </div>
                </div>
            </div> }

        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                <div class='input-group date' id='datetimepickerStart'>
                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                <div class='input-group date' id='datetimepickerEnd'>
                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PlaceReservationStartDate, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                <div class='input-group date' id='datetimepickerEnd'>
                    @Html.EditorFor(model => model.PlaceReservationStartDate, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.PlaceReservationStartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TournamentSubsciptionStartDate, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                <div class='input-group'>
                    @Html.EditorFor(model => model.TournamentSubsciptionStartDate, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.TournamentSubsciptionStartDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PublicId, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                @Html.EditorFor(model => model.PublicId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PublicId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SecretId, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                @Html.EditorFor(model => model.SecretId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SecretId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EventId, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                @Html.EditorFor(model => model.EventId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EventId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsPaypalActive, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                @Html.CheckBoxFor(model => model.IsPaypalActive, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IsPaypalActive, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PaypalClientId, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                @Html.EditorFor(model => model.PaypalClientId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PaypalClientId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PaypalSecretId, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                @Html.EditorFor(model => model.PaypalSecretId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PaypalSecretId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TicketPrice, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                @Html.EditorFor(model => model.TicketPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TicketPrice, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-lg-5 col-md-push-4 col-lg-push-3">
                <div class="checkbox">
                    @Html.EditorFor(model => model.SendRememberEmail, new { htmlAttributes = new { style = "margin-left:0;", disabled = true } })
                    @Html.LabelFor(model => model.SendRememberEmail)
                    @Html.ValidationMessageFor(model => model.SendRememberEmail, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.NbDaysBeforeRemember, htmlAttributes: new { @class = "control-label col-md-4 col-lg-3" })
            <div class="col-md-8 col-lg-5">
                @Html.EditorFor(model => model.NbDaysBeforeRemember, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                @Html.ValidationMessageFor(model => model.NbDaysBeforeRemember, "", new { @class = "text-danger" })
                <p class="help-block">Cette fonctionnalité n'est pas encore implémentée.</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-5">
                <input type="submit" value="Enregistrer" class="btn btn-primary pull-right" />
            </div>
        </div>
    </div>
}


@section Scripts {
    <script>
        $(function () {
            $('#datetimepickerStart, #datetimepickerEnd').datetimepicker({
                locale: 'fr-ca'
            });

            $("#datetimepickerStart").on("dp.change", function (e) {
                $('#datetimepickerEnd').data("DateTimePicker").minDate(e.date);
            });
            $("#datetimepickerEnd").on("dp.change", function (e) {
                $('#datetimepickerStart').data("DateTimePicker").maxDate(e.date);
            });

            $('#datetimepickerEnd').data("DateTimePicker").minDate($('#StartDate').val());
            $('#datetimepickerStart').data("DateTimePicker").maxDate($('#EndDate').val());
        });
    </script>
}