@model LanAdeptAdmin.Views.Places.ModelController.ReserveModel

@{
	ViewBag.Title = "Reserve";
	ViewBag.Sidebar = "_Sidebar_Place";
}

<h2>Réserver la place @Model.Place</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(m => m.PlaceID)
	<div class="form-horizontal">
		<div class="col-md-5 col-lg-push-3">
			<div class="checkbox">
				@Html.EditorFor(model => model.IsUser, new { htmlAttributes = new { style = "margin-left:0;" } })
				@Html.LabelFor(model => model.IsUser)
				@Html.ValidationMessageFor(model => model.IsUser, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-3" })
			<div class="col-md-5">
				@Html.DropDownListFor(m => m.UserID, ViewBag.UserID as SelectList, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-3 col-md-5">
				<input type="submit" value="Réserver" class="btn btn-primary pull-right" />
			</div>
		</div>
	</div>
}