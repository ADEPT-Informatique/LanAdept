@model LanAdeptAdmin.Views.Places.ModelController.ReserveModel

@{
	ViewBag.Title = "Reserve";
	ViewBag.Sidebar = "_Sidebar_Place";
}

<h2>Réserver la place @Model.Place</h2>
<hr />

@if (!string.IsNullOrWhiteSpace(TempData["Warning"] as string))
{
	<div class="alert alert-warning" role="alert">
		@Html.Raw(TempData["Warning"])
	</div>
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(m => m.PlaceID)
	
	@Html.ValidationSummary(true);
	
	<div class="form-horizontal">
		<div class="form-group">
			<div class="radio col-md-5 col-lg-push-3">
				<label>
					@Html.RadioButtonFor(model => model.IsUser, true)
					Réserver pour un utilisateur inscrit
				</label>
				@Html.ValidationMessageFor(model => model.IsUser, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label col-md-3" })
			<div class="col-md-5">
				@Html.DropDownListFor(m => m.UserID, ViewBag.UserID as SelectList, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="radio col-md-5 col-lg-push-3">
				<label>
					@Html.RadioButtonFor(model => model.IsUser, false)
					Réserver pour un utilisateur non inscrit
				</label>
				@Html.ValidationMessageFor(model => model.IsUser, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.FullNameNoAccount, htmlAttributes: new { @class = "control-label col-md-3" })
			<div class="col-md-5">
				@Html.EditorFor(m => m.FullNameNoAccount, new { HtmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.FullNameNoAccount, "", new { @class = "text-danger" })
			</div>
		</div>


		<div class="form-group">
			<div class="col-md-offset-3 col-md-5">
				<div class="btn-group pull-right">
					@Html.AuthorizeActionLink("Annuler", "Details", null, new { id = Model.PlaceID }, new { @class = "btn btn-default" })
					<input type="submit" value="Réserver" class="btn btn-primary" />
				</div>
			</div>
		</div>
	</div>
}

@section Scripts {

	<script>
		function updateRadios() {
			var value = $('input[type=radio][name=IsUser]:checked').val();

			$("#UserID").prop("disabled", value == 'False');
			$("#FullNameNoAccount").prop("disabled", value == 'True');
		}

		$(function () {
			$('input[type=radio][name=IsUser]').change(function () {
				updateRadios();
			});
		});

		updateRadios();
	</script>

}