@model LanAdeptData.Model.Map

<div id="map-container">
    <div id="map">
        @for (int i = 0; i < Model.Height; i++) {
            <div class="row">
                @for (int j = 0; j < Model.Width; j++) {
                    Tile tile = Model.Tiles.Where(x => x.PositionX == j && x.PositionY == i).FirstOrDefault();
                    if (tile == null) {
                        <div class="place place-none">
                            <div></div>
                        </div>
                    }
                    else {
                        @Html.Partial("SinglePlacePartial", tile.Place)
                    }
                }
            </div>
        }
    </div>
</div>

