@model LanAdeptAdmin.Models.PrepareDelete
@{
    ViewBag.Title = "PrepareReset";
}

<h2>PrepareReset</h2>

@using (Html.BeginForm("PrepareReset", "Place", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-group">
            
            @Html.LabelFor(x => x.NumberOf24SeatsRow)
            @Html.EditorFor(x => x.NumberOf24SeatsRow, new
            {
                htmlAttributes = new { @type = "number", @min = "0", @step = "1", @value = "0", @class = "form-control" }
            })
            @Html.ValidationMessageFor(x => x.NumberOf24SeatsRow, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.NumberOf9SeatsRow)
            @Html.EditorFor(x => x.NumberOf9SeatsRow, new
            {
                htmlAttributes = new { @type = "number", @min = "0", @step = "1", @value = "0", @class = "form-control" }
            })
            @Html.ValidationMessageFor(x => x.NumberOf9SeatsRow, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">

            @Html.LabelFor(x => x.NumberOfSpecialRowSeatsTable)
            @Html.EditorFor(x => x.NumberOfSpecialRowSeatsTable, new
            {
                htmlAttributes = new { @type = "number", @min = "0", @step = "1", @value = "0", @class = "form-control" }
            })
            @Html.ValidationMessageFor(x => x.NumberOfSpecialRowSeatsTable, "", new { @class = "text-danger" })
            @Html.LabelFor(x => x.NumberOfSpecialRowSeats)
            @Html.EditorFor(x => x.NumberOfSpecialRowSeats, new
            {
                htmlAttributes = new { @type = "number", @min = "0", @step = "1", @value = "0", @class = "form-control" }
            })
            @Html.ValidationMessageFor(x => x.NumberOfSpecialRowSeats, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.NumberOf24SeatsSpearTable)
            @Html.EditorFor(x => x.NumberOf24SeatsSpearTable, new
            {
                htmlAttributes = new { @type = "number", @min = "0", @step = "1", @value = "0", @class = "form-control" }
            })
            @Html.ValidationMessageFor(x => x.NumberOf24SeatsSpearTable, "", new { @class = "text-danger" })
        </div>
        <input class="btn btn-primary" type="submit" value="Reset" />
    </fieldset>
}

