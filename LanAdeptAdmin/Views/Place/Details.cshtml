@model LanAdeptData.Model.Place

@{
    ViewBag.Title = "Details";
    ViewBag.Sidebar = "_Sidebar_Place";
    List<Reservation> reservations = Model.Reservations.ToList();
}

<h2>Details</h2>

<div>
    <h4>Place @Model.PlaceSection.Name@Model.Number</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PlaceSection.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlaceSection.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>

    </dl>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Creation Date</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < 5 && i < Model.Reservations.Count; i++)
            {
                <tr>
                    <th>@reservations[i].User.CompleteName</th>
                    <th>@reservations[i].CreationDate</th>
                </tr>
            }
        </tbody>
    </table>
</div>

<p>
    @Html.AuthorizeActionLink("Back to List", "Index")
</p>
